{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "globals": {
      "type": "object",
      "properties": {
        "wallpaperDirectory": {
          "type": "string",
          "description": "The path of the directory wherein your wallpapers are stored\nThis is used so that you don't need to type the full path for the wallpaper variable",
          "examples": [
            "~/Pictures/wallpapers/",
            "~/.local/share/hoshimi/assets/",
            "~/Pictures"
          ]
        },
        "iconDirectory": {
          "type": "string",
          "description": "The path to the icons that you are using",
          "examples": [
            "/usr/share/icons/candy-icons/",
            "~/.local/share/hicolor",
            "/usr/share/icons/Adwaita"
          ]
        },
        "osuSkin": {
          "type": "string",
          "description": "The path to the osu skin you are using",
          "examples": [
            "~/.local/share/hoshimi/assets/osu"
          ]
        }
      }
    },
    "config": {
      "type": "string",
      "description": "The file in ~/.config/hoshimi/themes that houses your theme"
    },
    "configOverrides": {
      "type": "object",
      "properties": {
        "theme": {
          "type": "string",
          "enum": [
            "warm",
            "dark",
            "light"
          ]
        },
        "colorscheme": {
          "type": "string",
          "enum": [
            "generated",
            "dracula",
            "gruvbox",
            "catppuccin",
            "tokyo-night",
            "nightfox",
            "onedark"
          ]
        },
        "wallpaper": {
          "type": "string",
          "description": "The wallpaper path, or its relative path to the wallpaperDirectory / home / ~/.local/share/hoshimi/assets",
          "examples": [
            "~/Pictures/Wallpaper/wallpaper.png",
            "nord_car.gif",
            "silksong.jpeg"
          ]
        }
      }
    }
  }
}
